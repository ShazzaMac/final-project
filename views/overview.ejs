    <h2>Snapshot Overview</h2>
    <p>Here you can see all your snapshots and their emotional values.</p>
    <p>Click on the "Add" button above to add a new snapshot.</p>
    <div class="table-container">
          <table class="table">
        <thead>
            <tr>
                <th scope="col">Snapshot ID</th>
                <th scope="col">Date</th>
                <th scope="col">Enjoyment</th>
                <th scope="col">Surprise</th>
                <th scope="col">Contempt</th>
                <th scope="col">Sadness</th>
                <th scope="col">Fear</th>
                <th scope="col">Disgust</th>
                <th scope="col">Anger</th>
                <th scope="col">Trigger</th>
                
            </tr>
        </thead>
        <tbody>
            <% for (let row of Snapshot) { %>
                <% var snapshotid = row.snapshot_ID; %>
                <% var snapshotdate = row.snapshot_date; %>
                <% var enjoyment = row.enjoyment; %>
                <% var surprise = row.surprise; %>
                <% var contempt = row.contempt; %>
                <% var sadness = row.sadness; %>
                <% var fear = row.fear; %>
                <% var disgust = row.disgust; %>
                <% var anger = row.anger; %>
                <% var trigger = row.trigger_type; %>
                <% var inputdate = new Date(snapshotdate); %>
                <% const year = inputdate.getFullYear(); %>
                <% const month = (inputdate.getMonth() + 1).toString().padStart(2, '0'); %>
                <% const day = inputdate.getDate().toString().padStart(2, '0'); %>
                <% var formattedDate = `${day}-${month}-${year}`; %>
                <tr>
                    <td><%= snapshotid %></td>
                    <td><%= formattedDate %></td>
                    <td><%= enjoyment %></td>
                    <td><%= surprise %></td>
                    <td><%= contempt %></td>
                    <td><%= sadness %></td>
                    <td><%= fear %></td>
                    <td><%= disgust %></td>
                    <td><%= anger %></td>
                    <td><%= trigger %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
